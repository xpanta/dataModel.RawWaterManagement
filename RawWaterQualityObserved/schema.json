                },
                "conductivity": {
                    "$ref": "../RawWaterManagement-schema.json#/definitions/ngsildProperty"
                },
                "temperature": {
                    "$ref": "../RawWaterManagement-schema.json#/definitions/ngsildProperty"
                },
                "turbidity": {
                    "$ref": "../RawWaterManagement-schema.json#/definitions/ngsildProperty"
